---
import Layout from "../../layouts/Layout.astro";

import { getCollection } from "astro:content";
export async function getStaticPaths() {
    const allColors = await getCollection("colors");
    return allColors.map((color) => ({
        params: { slug: color.slug },
        props: { color },
    }));
}

const { color } = Astro.props;
const { Content } = await color.render();
---

<Layout title={color.data.name}>
    <div transition:persist class={`hex${color.data.hex} container`}>
        <h1 class={color.data.textColor}>{color.data.name}</h1>
        <ul>
            <li>{color.data.pantone}</li>
            <li>{color.data.hex}</li>
            <li>{color.data.rgb}</li>
            <li>{color.data.cmyk}</li>
        </ul>
        <Content />
    </div>
</Layout>

<style>
    .container {
        position: absolute;
        display: flex;
        flex-direction: column;
        justify-content: center;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
    }

    .black {
        color: black;
    }

    .white {
        color: white;
    }

    /* Magican's Red */
    .hexD1240D {
        background-color: #d1240d;
        color: white;
    }

    /* Strange Red */
    .hex801B0B {
        background-color: #801b0b;
        color: white;
    }

    /* Nivellan Brown */
    .hexC46647 {
        background-color: #c46647;
        color: black;
    }

    /* Aztec Gold */
    .hexE7B34E {
        background-color: #e7b34e;
        color: black;
    }

    /* Tatooine */
    .hexE6D5C1 {
        background-color: #e6d5c1;
        color: black;
    }
</style>
