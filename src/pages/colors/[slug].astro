---
import Layout from "../../layouts/Layout.astro";

import { getCollection } from "astro:content";
export async function getStaticPaths() {
    const allColors = await getCollection("colors");
    return allColors.map((color) => ({
        params: { slug: color.slug },
        props: { color },
    }));
}

const { color } = Astro.props;
const { Content } = await color.render();
---

<Layout title={color.data.name}>
    <div transition:persist class={`hex${color.data.hex} container`}>
        <h1 class={color.data.textColor}>{color.data.name}</h1>
        <ul>
            <li>{color.data.pantone}</li>
            <li>{color.data.hex}</li>
            <li>{color.data.rgb}</li>
            <li>{color.data.cmyk}</li>
        </ul>
        <Content />
    </div>
</Layout>

